{
  "compilerOptions": {
    "target": "es6", // Define a versão do ECMAScript para a qual o código será transpilado
    "module": "commonjs", // Define o sistema de módulos a ser usado
    "baseUrl": "./src", // Define a base para resolução de módulos
    "paths": {
      "@/*": ["*"] // Mapeia o alias "@" para a pasta "src"
    }
  },
  "exclude": ["node_modules", "dist"] // Exclui as pastas "node_modules" e "dist" da compilação
}